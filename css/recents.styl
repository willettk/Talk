.recents.page
  .column > section + hr
    margin-bottom: 40px
  
  .two-thirds.column
    .board-summary:last-child:after, .discussion-summary:last-child:after
      display: block
  
  .author
    color: gray
    margin-top: 10px
    
    a
      color: #333333
      
      &:hover
        text-decoration: none
    
    .role
      display: none
  
  .subjects .list .subject-summaries
    line-height: 0  
    margin: 0
    font-size: 0
    letter-spacing: -1
    
    .subject-summary
      padding: 10px 20px
      letter-spacing: normal
      vertical-align: top
      float: none
      display: inline-block

      
      &:before
        border-left: none
        border-right: none

      img
        max-height: 200px
        max-width: 200px
  
  .board.discussions .discussion-summary
    padding: 0 0 10px 10px
    
    .comment, .title
      max-width: 100%
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
    
    .title
      font-weight: bold
  
  .collections .list, .groups .list
    .collection, .group
      box-sizing: border-box
      display: inline-block
      padding: 10px 20px
      width: 49%
      vertical-align: top
      
      .title
        font-weight: bold
        color: inherit
      
      .subjects
        margin: 0 -5px
        overflow: hidden
        
        .subject
          box-sizing: border-box
          float: left
          padding: 0 5px
          width: 20%
          
          img
            width: 100%
